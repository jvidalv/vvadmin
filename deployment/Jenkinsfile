pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'cd src/ && composer install'
            }
        }
        stage('Configuration') {
            steps {
                sh 'mv ${WORKSPACE}/src/config/${ENV}/web.php ${WORKSPACE}/src/config/web.php'
                sh 'mv ${WORKSPACE}/src/config/${ENV}/db.php ${WORKSPACE}/src/config/db.php'
                sh 'mv ${WORKSPACE}/src/config/${ENV}/params.php ${WORKSPACE}/src/config/params.php'
            }
        }
        stage('Deploy') {
            steps {
                sh 'rm -r /var/www/test.vvadmin.dev/* || true'
                sh 'chmod -R 777 ${WORKSPACE}/src/web/assets && chmod -R 777 /var/lib/jenkins/workspace/vvadmin/deploy_test/src/runtime'
                sh 'mv ${WORKSPACE}/src/* /var/www/test.vvadmin.dev/'
            }
        }
    }
}